<h1 class = "text-center">Contact us</h1>
<p></p>
<style>
    body {
      font-family: Arial, Helvetica, sans-serif;
      text-align: center; 
    }

    form {
      border-radius: 35px; 
      border: 3px solid transparent; 
      padding: 16px; 
      background-color: #A4C3B2; 
      max-width: 600px; 
      width: 100%; 
      margin: 0 auto; 
    }

    input[type=text], input[type=email], textarea {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 35px; 
    }

    button, .submit-btn {
      color: white;
      padding: 14px 20px;
      margin: 0; 
      border: none;
      cursor: pointer;
      border-radius: 35px;
      background-color: #6B9080; /* Same background color for both buttons */
    }

    .submit-btn {
      width: 120px; /* Adjust width as needed */
      margin-right: 20px; 
    }

    .container {
      padding: 16px;
      border-radius: 35px;
    }

    span.psw {
      display: block; 
      text-align: right; 
      padding-top: 8px;
      color: #6B9080; 
      text-decoration: none; 
      margin-bottom: 25px;
    }

    label {
      display: block; 
      text-align: left; 
      margin-top: 10px; 
    }

    .alert {
      color: red; /* Style for the alert message */
      margin-bottom: 15px;
      font-weight: bold;
    }

    .field-with-errors {
      color: red; /* Style for field error messages */
      font-size: 14px;
      margin-top: 5px;
    }

    @media screen and (max-width: 300px) {
      .submit-btn {
         width: 100%; 
      }
    }
  </style>
<%= form_with scope: :contact_form, url: contact_form_index_path, method: :post, local: true, class: "container" do |form| %>
  <p class="text-content">
      If you have any questions, concerns, suggestions or know about an organizations/events we can add/contact, 
      please feel free to contact us. We will get back to you as soon as possible.
    </p>
    <p></p>
  <div class="form-group">
    <%= form.label :name, class: "font-weight-bold" %>
    <%= form.text_field :name, class: "form-control rounded-3", value: (current_user ? current_user.first_name : '') %>
  </div>
  <div class="form-group">
    <%= form.label :email, class: "font-weight-bold" %>
    <%= form.email_field :email, class: "form-control rounded-3", value: (current_user ? current_user.email : '') %>
  </div>
  <div class="form-group">
    <%= form.label :message, class: "font-weight-bold" %>
    <%= form.text_area :message, class: "form-control rounded-3" %>
  </div>
  <%= form.submit "Submit", class: "submit-btn" %>
<% end %>