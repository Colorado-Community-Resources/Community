<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>COmmunity</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "carousel", media: "all" %>
    <%= stylesheet_link_tag "admin", media: "all" %>
    <style>   
.text-size-control {
  position: fixed;
  bottom: 20px;  /* Distance from the bottom */
  right: 20px;   /* Distance from the right */
  background-color: white;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.text-size-control select {
  padding: 5px;
  font-size: 14px;
}
</style>

<!-- Text resizing -->
<div class="text-size-control">
  <label for="textSize">Change Text Size:</label>
  <select id="textSize" onchange="changeTextSize(this.value)">
    <option value="small">Small</option>
    <option value="medium" selected>Medium</option>
    <option value="large">Large</option>
  </select>
</div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <%= javascript_importmap_tags %>
  </head>
  <body>

    <% unless current_page_without_header? %>
      <%= render 'pages/guestheader' %>
    <% else %>
      <%= render 'pages/asidebar' %>
    <% end %>
    <div class = "container">
     <%= render partial: "shares/flash" %>
    <br/>
      <%= yield %>
    </div>

    <!--Custom Javascript for events accordion -->
    <%= javascript_include_tag 'events', 'data-turbolinks-track': 'reload' %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!--<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script> -->
    <!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>-->
    
    <!-- Text Size JavaScript function -->
    <script>
      function changeTextSize(size) {
        const textContent = document.querySelectorAll('.text-content');
  
        textContent.forEach(function(el) {
          if (size === 'small') {
            el.style.fontSize = '12px';
          } else if (size === 'medium') {
            el.style.fontSize = '16px'; // Default size
          } else if (size === 'large') {
            el.style.fontSize = '20px';
          }
        });
      }
    </script>
    <!-- <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->
  </body>
</html>