<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>COmmunity</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "carousel", media: "all" %>
    <%= stylesheet_link_tag "admin", media: "all" %>
    <link rel="icon" href="<%= asset_path 'COmmunity_favicon.png' %>" type="image/png">
    <%= stylesheet_link_tag "accordion", "data-turbo-track": "reload" %>

      <!-- Add text size controls -->
    <div class="controls">
    <button onclick="changeTextSize('small')">Small</button>
    <button onclick="changeTextSize('medium')">Medium</button>
    <button onclick="changeTextSize('large')">Large</button>
    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <% unless current_page_without_header? %>
      <%= render 'pages/guestheader' %>
    <% else %>
      <%= render 'pages/asidebar' %>
    <% end %>
    <div class = "container">
     <%= render partial: "shares/flash" %>
    <br/>
      <%= yield %>
    </div>

    <!--Custom Javascript for events accordion -->
    <%= javascript_include_tag 'events', 'data-turbolinks-track': 'reload' %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>