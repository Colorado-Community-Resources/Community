<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      font-family: Arial, Helvetica, sans-serif;
      /* Remove text-align: center to allow left alignment */
    }

    form {
      border-radius: 35px; 
      border: 3px solid transparent; 
      padding: 16px; 
      background-color: #A4C3B2; 
      max-width: 600px; 
      width: 100%; 
      margin: 0 auto; 
    }

    h1 {
      text-align: center; 
      margin: 0; 
    }

    input[type=text], input[type=password], input[type=email], input[type=number], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 35px; 
    }

    button {
      color: white;
      padding: 14px 20px;
      margin: 0; 
      border: none;
      cursor: pointer;
      border-radius: 35px;
    }

    .create-profile-btn {
      background-color: #6B9080; 
      width: 160px; 
      border-radius: 35px; 
      margin-top: 20px; /* Add margin above the button */
    }

    .container {
      padding: 16px;
      border-radius: 35px;
    }

    label {
      display: block; 
      text-align: left; 
      margin-top: 10px; 
    }

    .field-with-errors {
      color: red;
      font-size: 14px;
      margin-top: 5px;
    }

    .password-hints {
      font-size: 14px;
      color: #555;
      margin-top: 10px;
      padding-left: 0;
      display: block;
      text-align: left; /* Ensure text is aligned to the left */
    }

    .password-hints ul {
      padding-left: 20px; /* Make sure list items are indented */
      list-style-type: disc;
    }

    .password-hints li {
      margin-bottom: 5px;
      line-height: 1.5;
    }

    @media screen and (max-width: 300px) {
      .create-profile-btn {
         width: 100%; 
      }
    }
  </style>
</head>
<body>

  <%= form_with(model: @user, url: users_path, local: true) do |f| %>
    <div class="container">
      <!-- Username Field -->
      <label for="username"><b>Username</b></label>
      <%= f.text_field :username, placeholder: "Enter Username", required: true %>
      <% if @user.errors[:username].any? %>
        <div class="field-with-errors"><%= @user.errors[:username].join(", ") %></div>
      <% end %>

      <!-- First Name Field -->
      <label for="first_name"><b>First Name</b></label>
      <%= f.text_field :first_name, placeholder: "Enter First Name", required: true %>
      <% if @user.errors[:first_name].any? %>
        <div class="field-with-errors"><%= @user.errors[:first_name].join(", ") %></div>
      <% end %>

      <!-- Email Field -->
      <label for="email"><b>Email</b></label>
      <%= f.email_field :email, placeholder: "Enter Email", required: true %>
      <% if @user.errors[:email].any? %>
        <div class="field-with-errors"><%= @user.errors[:email].join(", ") %></div>
      <% end %>

      <!-- Age Range Field -->
      <label for="age_range"><b>Age Range</b></label>
      <%= f.select :age_range, options_for_select([['Under 18', 'Under 18'], ['18-24', '18-24'], ['25-34', '25-34'], ['35-44', '35-44'], ['45-54', '45-54'], ['55-64', '55-64'], ['65 and over', '65 and over']]), { prompt: "Select Age Range" }, required: true %>
      <% if @user.errors[:age_range].any? %>
        <div class="field-with-errors"><%= @user.errors[:age_range].join(", ") %></div>
      <% end %>

      <!-- Password Field -->
      <label for="password"><b>Password</b></label>
      <%= f.password_field :password, placeholder: "Enter Password", required: true %>
      <% if @user.errors[:password].any? %>
        <div class="field-with-errors"><%= @user.errors[:password].join(", ") %></div>
      <% end %>

      <!-- Password Hints -->
      <div class="password-hints">
        <p>Your password must contain:</p>
        <ul>
          <li>At least one lowercase letter</li>
          <li>At least one uppercase letter</li>
          <li>At least one number</li>
          <li>At least one special character</li>
          <li>Minimum length of 8 characters</li>
        </ul>
      </div>

      <!-- Password Confirmation Field -->
      <label for="confirm_password"><b>Confirm Password</b></label>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true %>
      <% if @user.errors[:password_confirmation].any? %>
        <div class="field-with-errors"><%= @user.errors[:password_confirmation].join(", ") %></div>
      <% end %>

      <!-- Zipcode Field -->
      <label for="zipcode"><b>Zipcode</b></label>
      <%= f.number_field :zipcode, placeholder: "Enter Zipcode", required: true %>
      <% if @user.errors[:zipcode].any? %>
        <div class="field-with-errors"><%= @user.errors[:zipcode].join(", ") %></div>
      <% end %>

      <!-- Create Profile Button with more space -->
      <div>
        <button type="submit" class="create-profile-btn">Create Profile</button>
      </div>
    </div>
  <% end %>

</body>
</html>
