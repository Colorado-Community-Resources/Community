<nav class="navbar navbar-expand-lg" style="background-color: #A4C3B2;">
  <div class="container"> <!-- Add container to center and add margins -->
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag '14.png', alt: 'COmmunity Logo', class: 'logo-img' %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Events', events_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Explore', pages_explore_path, class: 'nav-link' %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to 'About Us', pages_about_us_path, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'About Us', pages_about_us_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Log In', users_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Create a profile', new_user_path, class: 'nav-link' %>
          </li>
        <% end %>
        <li class="nav-item">
            <%= link_to 'Contact Us', contactus_path, class: 'nav-link' %>
          </li>
      </ul>
      <% if logged_in? %>
        <ul class="navbar-nav ms-auto"> <!-- ms-auto pushes this to the right -->
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="accountDropdown" role="button" data-bs-toggle="dropdown">
              Account
            </a>
            <ul class="dropdown-menu custom-dropdown-bg" aria-labelledby="accountDropdown">
              <li><%= link_to 'Profile', user_path(current_user.username), class: 'dropdown-item' %></li>
              <li><%= link_to 'Favorites', favorites_path, class: 'dropdown-item' %></li>
              <li><%= link_to 'Surveys', survey_path, class: 'dropdown-item' %></li>
              <li><%= link_to 'Settings', edit_user_path(current_user.username), class: 'dropdown-item' %></li>
              <li><%= link_to 'Logout', logout_path, method: :delete, class: 'dropdown-item' %></li>
            </ul>
          </li>
        </ul>
      <% end %>
        <%= form_with(url: search_path, method: :get, local: true, html: { class: 'd-flex ms-3', role: 'search' }) do |form| %>
          <%= form.text_field :query, placeholder: 'Search', class: 'form-control me-2', aria: { label: 'Search' }, required: true %>
        <%= form.submit 'Search', class: 'btn btn-outline-search' %>
      <% end %>
    </div>
  </div>
</nav>




<style>
  /* Custom style for the dropdown menu with white border */
  .dropdown-menu {
    border: 2px solid white; /* White border */
    border-radius: 5px; /* Rounded corners */
    background-color: #ffffff; /* Ensure the background is white */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    padding: 10px; /* Add some padding */
  }

  /* Optional: Add hover effect for dropdown items */
  .dropdown-item:hover {
    background-color: #f0f0f0; /* Light gray hover background */
    color: #6B9080; /* Match your color theme */
  }

  /* Increase font size for all text inside the navbar */
  .navbar-nav .nav-link,
  .navbar-brand,
  .dropdown-item,
  .form-control {
  }

  .btn-outline-search {
    background-color: #A4C3B2;  /* Set the button background color */
    color: #4e6a5b;
    border: 1px solid #4e6a5b;  /* Border matching the background color */
  }

  .btn-outline-search:hover {
    background-color: #4e6a5b;  /* Darker shade on hover */
    border-color: #4e6a5b;  /* Darker border on hover */
    color: white;
  }
</style>