<h1 class = "text-center">Categories</h1>
<%= button_to "Create new category", new_category_path, method: :get, class: "btn btn-alogin btn-lg" %>
<p></p>
<div id="categories">
  <table class = "table">
    <thead>
      <tr>
        <th scope = "col"><strong>Abbreviation:</strong></th>
        <th scope = "col"><strong>Category Name:</strong></th>
        <th scope = "col"><strong>Created:</strong></th>
        <th scope = "col"><strong>Last Update:</strong></th>    
      </tr>
    </thead>
    <tbody class = "table-group-divider">
      <% @categories.each do |category| %>
        <%= render partial: "category", locals: { category: category } %>
      <% end %>
    </tbody>
  </table>
</div>